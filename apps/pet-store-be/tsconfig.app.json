{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "customConditions": null,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
